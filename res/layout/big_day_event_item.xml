<?xml version="1.0" encoding="utf-8"?>
<com.android.calendar.kr.common.CommonDayEventItemView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:clip_round="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="@dimen/big_calendar_event_item_size"
            android:layout_height="@dimen/big_calendar_event_item_size"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_default_icon"
            android:layout_marginEnd="10dp"/>

        <TextView
            android:id="@+id/event_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/event_image"
            android:layout_toStartOf="@id/event_time"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:textSize="18sp"
            android:textColor="?attr/common_text_color_main"
            android:text="일룡생일" />

        <TextView
            android:id="@+id/event_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="?attr/common_text_color_secondary"
            android:text="00:00 - 01:00"/>
    </RelativeLayout>

    <include
        layout="@layout/horizontal_line" />

</com.android.calendar.kr.common.CommonDayEventItemView>