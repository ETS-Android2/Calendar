<resources>
    <declare-styleable name="CustomWidget">
        <attr name="editEvent_small_color" format="color"/>
        <attr name="event_info_organizer_color" format="color"/>
        <attr name="event_info_description_color" format="color"/>
        <attr name="event_info_body_color" format="color"/>
        <attr name="event_info_label_color" format="color"/>
        <attr name="create_event_date_color" format="color"/>
        <attr name="calendar_owner_text_color" format="color"/>
    </declare-styleable>

    <attr name="common_background_color" format="color" />
    <attr name="common_light_background_color" format="color" />
    <attr name="common_button_background_color" format="color" />
    <attr name="common_text_color_dark" format="color" />
    <attr name="common_text_color_light" format="color" />
    <attr name="common_text_color_main" format="color" />
    <attr name="common_text_color_secondary" format="color" />
    <attr name="common_text_color_tertiary" format="color" />
    <attr name="common_text_color_quaternary" format="color" />
    <attr name="preference_title_color" format="color" />
    <attr name="preference_summary_color" format="color" />

    <attr name="current_month_text_color" format="color" />
    <attr name="current_day_text_color" format="color" />
    <attr name="selected_day_outline_color" format="color" />
    <attr name="weekend_text_color" format="color" />
    <attr name="min_year" format="integer" />
    <attr name="max_year" format="integer" />
    <attr name="month_proportion" format="float" />
    <attr name="today_fill_color" format="color" />

    <declare-styleable name="CalendarView">
        <attr name="calendar_padding" format="dimension" /><!--日历内部左右padding-->
        <attr name="week_line_background" format="color" /><!--线条颜色-->
        <attr name="week_text_color" format="color" /><!--周栏字体颜色-->
        <attr name="week_text_size" format="dimension" /><!--周栏字体大小-->
        <attr name="week_line_margin" format="dimension" /><!--线条margin-->
        <attr name="week_bar_height" format="dimension" /> <!--星期栏的高度-->
        <attr name="day_text_size" format="dimension" />
        <attr name="calendar_height" format="dimension" />
        <attr name="calendar_match_parent" format="boolean" />
        <attr name="today_fill_color" />
        <attr name="selected_text_color" format="color" />
        <attr name="other_month_text_color" format="color" />
        <attr name="min_year" />
        <attr name="max_year" />
        <attr name="min_year_month" format="integer" />
        <attr name="max_year_month" format="integer" />
        <attr name="min_year_day" format="integer" />
        <attr name="max_year_day" format="integer" />
        <attr name="month_background_height_percent" format="integer" />
        <attr name="month_proportion" />
    </declare-styleable>

    <declare-styleable name="BottomBar">
        <attr name="bottom_bar_drawable" format="reference" />
        <attr name="bottom_bar_item_focused_color" format="color" />
        <attr name="bottom_bar_item_unfocused_color" format="color" />
    </declare-styleable>

    <declare-styleable name="ImageTextView">
        <attr name="focused_color" format="color" />
        <attr name="unfocused_color" format="color" />
    </declare-styleable>

    <!-- Attributes for vertical calendar view -->
    <declare-styleable name="VerticalCalendarView">
        <attr name="min_year" />
        <attr name="max_year" />
        <attr name="month_item_width" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="week_bar_color" format="color" />
        <attr name="other_month_color" format="color" />
        <attr name="current_month_color" format="color" />
        <attr name="week_bar_weekend_color" format="color" />
        <attr name="month_weekend_color" format="color" />
        <attr name="today_underline_color" format="color" />
        <attr name="today_underline_height" format="dimension" />
        <attr name="selected_day_circle_color" format="color" />
        <attr name="day_view_main_bg_color" format="color" />
        <attr name="day_view_event_bg_color" format="color" />
    </declare-styleable>

    <!-- Attributes for big calendar view -->
    <declare-styleable name="BigCalendarView">
        <attr name="min_year" />
        <attr name="max_year" />
        <attr name="month_proportion" />
        <attr name="today_outline_color" format="color" />
        <attr name="today_fill_color" />
        <attr name="day_color" format="color" />
        <attr name="weekday_color" format="color" />
        <attr name="event_color" format="color" />
        <attr name="day_size" format="dimension" />
        <attr name="weekday_size" format="dimension" />
        <attr name="event_size" format="dimension" />
        <attr name="event_circle_radius" format="dimension" />
        <attr name="day_label_color" format="color" />
        <attr name="day_label_size" format="float" />
    </declare-styleable>
    <declare-styleable name="CommonDayEventItemView">
        <attr name="clip_round" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ExpandableLayout">
        <attr name="el_duration" format="integer" />
        <attr name="el_expanded" format="boolean" />
        <attr name="el_parallax" format="float" />
        <attr name="android:orientation"/>
    </declare-styleable>
</resources>
